{
    "version": 2,
    "builds": [
        {
            "src": "api/app.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "15mb",
                "maxDuration": 30
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/app.py",
            "methods": ["GET", "POST", "OPTIONS"]
        }
    ],
    "functions": {
        "api/app.py": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "env": {
        "PYTHONPATH": ".",
        "PYTHONUNBUFFERED": "1"
    }
}
