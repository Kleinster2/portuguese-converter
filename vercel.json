{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/convert",
            "dest": "api/index.py"
        },
        {
            "src": "/api/tts",
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "PYTHONPATH": "/var/task/api",
        "AZURE_TTS_KEY": "",
        "AZURE_TTS_REGION": "",
        "AZURE_TTS_STYLE": ""
    }
}
